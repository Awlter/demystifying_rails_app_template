<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br /> <br />
  <%= f.label :body %>
  <%= f.text_area :body %>
  <br /> <br />
  <%= f.label :author %>
  <%= f.text_field :author %>
  <br /> <br />
  <%= f.submit "#{@post.new_record? ? 'Create' : 'Update'}" %>
<% end %>